<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
				http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
				http://www.springframework.org/schema/context 
				http://www.springframework.org/schema/context/spring-context-2.5.xsd" 
				>

	<context:annotation-config />

	<bean id="studentService" class="xyz.zzyymaggie.spring.ioc.ctor.StudentService">
		<constructor-arg name="classSerivce" ref="classService"></constructor-arg>
	</bean>
	<bean id="classService" class="xyz.zzyymaggie.spring.ioc.ctor.ClassSerivce">
		<constructor-arg name="studentService" ref="studentService"></constructor-arg>
	</bean>

</beans>